# Compiler
CC = gcc

# Source files
SRC = main.c school.c

# Object files (automatically generated)
OBJ = $(SRC:.c=.o)

# Name of the executable
NAME = school

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile .c files into .o files
%.o: %.c
	$(CC) -c $< -o $@
